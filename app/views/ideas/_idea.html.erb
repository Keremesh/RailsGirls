<div id="<%= dom_id idea %>">
  <p>
    <strong>Name:</strong>
    <%= idea.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= idea.description %>
  </p>

  <p>
    <% if idea.picture? %>
    <strong>Picture:</strong>
    <%= image_tag(idea.picture_url, width: 600)  %>
    <%# <img src="<%= idea.picture %>
    <%end%>
  </p>
</div>
